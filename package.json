{
  "name": "tmux-session-manager",
  "version": "0.1.0",
  "description": "Tmux Session Manager for feature development (Node + Ink)",
  "bin": {
    "dev-sessions": "dist/bin/dev-sessions.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p .",
    "typecheck": "tsc -p tsconfig.test.json",
    "start": "node dist/index.js",
    "cli": "node dist/bin/dev-sessions.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "ink": "6.2.3",
    "ink-syntax-highlight": "2.0.2",
    "react": "19.1.1"
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.1",
    "@testing-library/react": "14.3.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.18.0",
    "@types/react": "19.1.12",
    "ink-testing-library": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "30.1.1",
    "jest-environment-node": "29.7.0",
    "react-dom": "19.1.1",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2"
  }
}
