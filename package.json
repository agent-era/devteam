{
  "name": "tmux-session-manager",
  "version": "0.1.0",
  "description": "Tmux Session Manager for feature development (Node + Ink)",
  "bin": {
    "dev-sessions": "dist/bin/dev-sessions.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p .",
    "typecheck": "npm install && tsc -p tsconfig.test.json",
    "start": "node dist/index.js",
    "cli": "node dist/bin/dev-sessions.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "ink": "^5.2.1",
    "ink-syntax-highlight": "^2.0.2",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.4"
  }
}
