{
  "name": "@agent-era/devteam",
  "version": "1.0.6",
  "description": "DevTeam: Git/Tmux development workflow TUI (Node + Ink)",
  "bin": {
    "devteam": "dist/bin/devteam.js",
    "devteam-relay": "dist/bin/devteam-relay.js",
    "devteam-server": "dist/bin/devteam-server.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p . && chmod +x dist/bin/*.js",
    "typecheck": "npm install && tsc -p tsconfig.test.json",
    "start": "node dist/index.js",
    "cli": "node dist/bin/devteam.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:terminal": "npm run build && tsc -p tsconfig.node-tests.json && node --test tests/e2e/terminal/*.test.mjs",
    "prepublishOnly": "npm run build",
    "release:patch": "npm ci && npm version patch && npm publish --access public",
    "release:minor": "npm ci && npm version minor && npm publish --access public",
    "release:major": "npm ci && npm version major && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agent-era/devteam.git"
  },
  "bugs": {
    "url": "https://github.com/agent-era/devteam/issues"
  },
  "homepage": "https://github.com/agent-era/devteam#readme",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "preferGlobal": true,
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./relay": "./dist/relay/index.js",
    "./relay/server": "./dist/relay/server.js",
    "./relay/client": "./dist/relay/client.js",
    "./sync": "./dist/sync/index.js",
    "./sync/server": "./dist/sync/server.js",
    "./sync/client": "./dist/sync/client.js"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "ink": "^5.2.1",
    "ink-syntax-highlight": "^2.0.2",
    "isomorphic-ws": "^5.0.0",
    "react": "^18.3.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/ws": "^8.18.1",
    "babel-jest": "^29.7.0",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
